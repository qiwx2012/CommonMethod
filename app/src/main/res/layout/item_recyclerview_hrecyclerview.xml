<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:minHeight="290dp"
    android:orientation="vertical">

    <View style="@style/home_floor_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            style="@style/home_floor_color"
            android:background="@color/red_f0" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/home_floor_title"
            android:text="打折促销" />
    </LinearLayout>

    <View style="@style/home_floor_line_biddle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/h_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
